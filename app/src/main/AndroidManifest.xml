<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.puneragroups.punerainvestmart">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.puneragroups.punerainvestmart.Bean"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:hardwareAccelerated="true"
        android:theme="@style/AppTheme">

        <activity
            android:name="com.puneragroups.punerainvestmart.PlanAndRevenue"
            android:exported="true"
            android:screenOrientation="portrait"/>

        <activity android:name="com.puneragroups.punerainvestmart.IntrestReturnsActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name="com.puneragroups.punerainvestmart.Notification"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.puneragroups.punerainvestmart.Account"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.puneragroups.punerainvestmart.OTPLogin"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.puneragroups.punerainvestmart.LoginActivity"
            android:screenOrientation="portrait" />
        <activity android:name="com.puneragroups.punerainvestmart.SlideScreen" />
        <activity
            android:name="com.puneragroups.punerainvestmart.SplashActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.puneragroups.punerainvestmart.MainActivity"
            android:screenOrientation="portrait"/>

        <service android:name="com.puneragroups.punerainvestmart.MyFirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

    </application>

</manifest>